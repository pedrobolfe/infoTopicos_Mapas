<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escolha um estado" />

    <RadioGroup
        android:id="@+id/radioGroupEstados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radioButtonPr"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:text="Paraná" />

        <RadioButton
            android:id="@+id/radioButtonSc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Santa Catarina" />

        <RadioButton
            android:id="@+id/radioButtonRs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rio Grande do Sul" />

    </RadioGroup>


    <CheckBox
        android:id="@+id/checkboxIDH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IDH" />

    <CheckBox
        android:id="@+id/checkboxDensidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Densidade" />

    <CheckBox
        android:id="@+id/checkboxArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Área Total" />

    <CheckBox
        android:id="@+id/checkboxPopulacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="População" />

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/imagem"
        android:layout_width="325dp"
        android:layout_height="130dp" />

    <TextView
        android:id="@+id/idh"
        android:layout_width="238dp"
        android:layout_height="42dp"
        android:text="IDH"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/populacao"
        android:layout_width="237dp"
        android:layout_height="32dp"
        android:text="População"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/densidade"
        android:layout_width="238dp"
        android:layout_height="32dp"
        android:text="Densidade"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/area"
        android:layout_width="249dp"
        android:layout_height="45dp"
        android:text="Área total"
        android:textAlignment="center"
        android:textStyle="bold" />
</LinearLayout>
